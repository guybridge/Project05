<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/sort_fragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/colorPrimary">

    <TextView
        android:textAlignment="center"
        android:textColor="@color/textColour"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Sort by"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <RadioGroup
        android:padding="10dp"
        android:id="@+id/sortRadioGroup"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioPopularity"
            android:text="Popularity"
            style="@style/radioButtonStyle"/>

        <RadioButton
            android:id="@+id/radioReleaseDate"
            android:text="Release Date"
            style="@style/radioButtonStyle"/>

        <RadioButton
            android:id="@+id/radioRevenue"
            android:text="Revenue"
            style="@style/radioButtonStyle"/>

        <RadioButton
            android:id="@+id/radioAverageVote"
            android:text="Average Vote"
            style="@style/radioButtonStyle"/>

        <RadioButton
            android:id="@+id/radioNumVotes"
            android:text="Number of Votes"
            style="@style/radioButtonStyle"/>

    </RadioGroup>

</LinearLayout>

</FrameLayout>