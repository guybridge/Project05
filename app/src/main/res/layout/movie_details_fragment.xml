<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparentBlack">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieDetailsImageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/textColour"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whiplash"
        android:id="@+id/movieTitleTextView"
        android:layout_below="@+id/movieDetailsImageView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:textAlignment="center"
        android:padding="4dp"
        android:textSize="16sp"
        android:textColor="@color/textColour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Under the direction of a ruthless instructor, a talented young drummer begins to pursue perfection at any cost, even his humanity."
        android:id="@+id/movieOverviewTextView"
            android:layout_below="@+id/movieTitleTextView"/>


</RelativeLayout>

</ScrollView>